= render "shared/breadcrumb", category: @post.category

.article.post
  .section.post-head
    %h1= @post.title
    .br
    .small
      %h5.time
        = @post.created_at.to_date.strftime("%d %B, %Y")
        - if @post.category.present?
          |
          = link_to @post.category.name, @post.category
        |
        = link_to "Змінити", edit_post_path(@post)
        |
        = link_to "Видалити", post_path(@post), method: :delete, data: { confirm: "Ви впевнені?" }
  .section.post-body
    = image_tag @post.image.url(:large), class: "img-show" if @post.image?
    %h5= @post.body.html_safe

= render "posts/disqus"